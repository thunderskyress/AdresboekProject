<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.adresboek.AdresDetail">

   <TextView
       android:id="@+id/TagTextView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Tagname"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/AdresTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Adress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TagTextView"
        android:layout_margin="20dp"/>

    <EditText
        android:id="@+id/TagEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/TagTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/AdresEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/AdresTextView"
        android:layout_alignEnd="@+id/TagEditText"
        android:layout_alignRight="@+id/TagEditText"
        android:layout_alignStart="@+id/TagEditText"
        android:layout_alignLeft="@+id/TagEditText"
        android:layout_alignBottom="@+id/AdresTextView"/>

    <Button
        android:id="@+id/SaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/CloseBtn"
        android:text="Save"/>

    <Button
        android:id="@+id/CloseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Close"/>

    <Button
        android:id="@+id/DeleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/SaveBtn"
        android:text="Delete"/>






</RelativeLayout>
